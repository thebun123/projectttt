<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:padding="10dp"
    tools:context="com.example.nguyenxuantruong.myproject.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:weightSum="100"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:id="@+id/tvStt"
            android:text="stt"
            android:gravity="center"
            android:textSize="30sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:weightSum="100"
                    android:layout_height="match_parent"
                    android:layout_weight="30">

                    <ImageView
                        android:src="@drawable/up"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="35"/>

                    <TextView
                        android:id="@+id/tvUp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="70"
                        android:gravity="center"
                        android:text="up"
                        android:textColor="@color/colorGreen"
                        android:textSize="20sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:scaleType="center"
                    android:src="@drawable/money"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:orientation="vertical">

                    <ImageView
                        android:src="@drawable/down"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="35"/>

                    <TextView
                        android:id="@+id/tvDown"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="70"
                        android:gravity="center"
                        android:text="down"
                        android:textColor="#ff0000"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
 

        <TextView
            android:id="@+id/tvToday"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="20"
            android:text="22/22/2012"
            android:textSize="20sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <Button
            android:id="@+id/bChi_tieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dcfbcc"
            android:text="Chi tiêu trong ngày" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <Button
            android:id="@+id/bThong_ke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dcfbcc"
            android:text="Thống kê chi tiêu" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <Button
            android:id="@+id/bGui_tk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dcfbcc"
            android:text="Gửi tiết kiệm" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <Button
            android:id="@+id/bOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dcfbcc"
            android:text="Thoát" />
    </LinearLayout>

</LinearLayout>
